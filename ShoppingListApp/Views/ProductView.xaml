<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ShoppingListApp.Views.ProductView">

    <Grid ColumnDefinitions="Auto,*,Auto,Auto,Auto" Padding="6">
        <CheckBox Grid.Column="0" IsChecked="{Binding Bought}" />
        <VerticalStackLayout Grid.Column="1">
            <Label Text="{Binding Name}" FontSize="18"
                   TextDecorations="{Binding Bought, Converter={StaticResource BoolToStrikeConverter}}" />
            <HorizontalStackLayout Spacing="6">
                <Label Text="{Binding Quantity}" />
                <Label Text="{Binding Unit}" />
                <Label Text="{Binding Store}" TextColor="Gray" />
                <Label Text="optional" IsVisible="{Binding Optional}" TextColor="Orange" />
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <Button Grid.Column="2" Text="-" Clicked="Minus_Clicked" WidthRequest="40"/>
        <Button Grid.Column="3" Text="+" Clicked="Plus_Clicked" WidthRequest="40"/>
        <Button Grid.Column="4" Text="X" Clicked="Delete_Clicked" BackgroundColor="Red" TextColor="White" WidthRequest="40"/>
    </Grid>
</ContentView>
