<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ShoppingListApp.Models"
             xmlns:views="clr-namespace:ShoppingListApp.Views"
             x:Class="ShoppingList.Views.ShoppingListPage"
             x:DataType="models:AllCategories"
             Title="Shopping List">

    <VerticalStackLayout Margin="10">
        <CollectionView ItemsSource="{Binding Categories}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <views:CategoryView />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button Text="Add Category" Clicked="AddCategory_Clicked"/>
    </VerticalStackLayout>
</ContentPage>
