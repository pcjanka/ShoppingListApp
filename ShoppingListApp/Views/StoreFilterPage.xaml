<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:ShoppingListApp.Views"
             x:Class="ShoppingListApp.Views.StoreFilterPage"
             Title="Filter by Store">

    <VerticalStackLayout Padding="10" Spacing="8">
        <Picker x:Name="storePicker" Title="Select store" SelectedIndexChanged="StorePicker_SelectedIndexChanged"/>
        <CollectionView x:Name="productsView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <views:ProductView />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
